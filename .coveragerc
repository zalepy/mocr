[run]
# Coverage configuration for Screen OCR Tool
source = screen_ocr
branch = True

omit =
    */tests/*
    */test_*.py
    setup.py
    run_tests.py

[report]
# Exclude certain lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abstract.abstractmethod
    if False:
    if true:
    class .*\(Protocol\):

precision = 2
show_missing = True
skip_covered = False

[html]
directory = htmlcov

[xml]
output = coverage.xml
